extends layout

block body
    header.header
        .header__text
            h1.heading-primary TripMaster
    .form__container.form__container-hero
        form.form.form--hero
            .form__group
                label.form__label(for="name") Name
                input.form__input(type="text" name="name" placeholder="Your name..." required)
            .form__group
                label.form__label(for="email") Email
                input.form__input(type="email" name="email" placeholder="Your email address..." required)
            .form__group
                label.form__label(for="password") Password
                input.form__input(type="password" name="password" placeholder="Password" required minlength="6")
            .form__group
                label.form__label(for="password-confirm") Confirm Password
                input.form__input(type="password" name="password-confirm" placeholder="Confirm Password" required)
            .form__group
                button.btn.btn--submit(type="submit" value="Sign Up") Sign Up